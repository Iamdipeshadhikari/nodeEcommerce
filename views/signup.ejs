<%- include('./includes/head.ejs') %>

<div class="container">
   <%- include('./includes/navigation.ejs') %>

   <% if(message) { %>
      <%- include('./includes/error.ejs') %>
   <% } %>


   <section class="Hero">
      <%- include('./includes/heroInfo.ejs') %>

      <div class="Hero__right">
         <form action="/user/signup" method="POST" class="Hero__form">
            <h2 class="heading--secondary">
               Register Form
            </h2>
            <input
               name="name"
               type="text"
               placeholder="Full Name"
               class="Hero__form--input"
            />
            <input
               name="email"
               type="text"
               placeholder="Email"
               class="Hero__form--input"
            />
            <input
               name="password"
               type="password"
               placeholder="Password"
               class="Hero__form--input"
            />

            <button type="submit" class="btn--secondary">
               Register
            </button>
         </form>
      </div>
   </section>
</div>

<%- include('./includes/end.ejs') %>
